{
	"name": "mofunetive",
	"version": "2.0.0",
	"private": true,
	"license": "MPL-2.0",
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"bump-version": "bun --filter '*' ci:bump",
		"changelog:generate": "bun changelog:update -r 0",
		"changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"clean": "turbo run clean && bun run clean:packages",
		"clean:full": "turbo run clean",
		"clean:node_modules": "bunx rimraf@3 './**/node_modules'",
		"clean:packages": "bunx rimraf@3 './**/node_modules/@mofunetive'",
		"dev": "turbo run dev",
		"fix": "bun --filter '*' lint:fix",
		"format": "bun --filter '*' format",
		"lint": "bun --filter '*' lint",
		"pre-commit": "lint-staged --quiet",
		"pre-push": "bun --silent lint",
		"prepare": "is-ci || husky",
		"prettier": "prettier --write . --ignore-unknown"
	},
	"lint-staged": {
		"*": [
			"prettier --write --ignore-unknown"
		]
	},
	"dependencies": {
		"@types/node": "22.13.14",
		"esbuild": "0.25.1"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.0",
		"@commitlint/config-conventional": "19.8.0",
		"@commitlint/cz-commitlint": "19.8.0",
		"@jsdevtools/version-bump-prompt": "6.1.0",
		"@types/bun": "1.2.8",
		"@typescript-eslint/eslint-plugin": "8.28.0",
		"@typescript-eslint/parser": "8.28.0",
		"commitizen": "4.3.1",
		"conventional-changelog-cli": "5.0.0",
		"eslint": "8",
		"eslint-config-prettier": "10.1.1",
		"eslint-plugin-graphql": "4.0.0",
		"eslint-plugin-prettier": "5.2.5",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-typescript-sort-keys": "3.3.0",
		"eslint-plugin-unicorn": "56",
		"git-format-staged": "3.1.1",
		"husky": "9.1.7",
		"inquirer": "12",
		"is-ci": "4.1.0",
		"jiti": "2.4.2",
		"lint-staged": "15.5.0",
		"prettier": "^3.5.3",
		"prettier-plugin-packagejson": "2.5.10",
		"prettier-plugin-sh": "0.15.0",
		"rimraf": "6.0.1",
		"turbo": "2.4.4"
	},
	"packageManager": "bun@1.2.6",
	"engines": {
		"bun": ">=1.2.2",
		"node": ">=20.x",
		"pnpm": ">=10.x"
	}
}
