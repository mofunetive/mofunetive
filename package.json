{
	"private": true,
	"name": "mofunetive",
	"version": "2.0.0",
	"license": "MPL-2.0",
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"bump-version": "bun --filter '*' ci:bump",
		"changelog:generate": "bun changelog:update -r 0",
		"changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"clean": "turbo run clean",
		"clean:full": "turbo run clean",
		"clean:node_modules": "rimraf --glob './**/node_modules'",
		"dev": "turbo run dev",
		"fix": "bun --filter '*' lint:fix",
		"format": "prettier --write .",
		"postinstall": "bun --silent --filter '@mofunetive/metadata' postinstall && bun --silent --filter '!@mofunetive/metadata' postinstall",
		"lint": "bun --filter '*' lint",
		"prepack": "run clean",
		"pre-commit": "lint-staged",
		"pre-push": "bun --silent lint",
		"prepare": "is-ci || husky install",
		"prettier": "bun --filter '*' format",
		"prettier:json": "prettier-package-json --write '**/package.json' --use-tabs false"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"@types/node": "22.13.11",
		"esbuild": "0.25.1",
		"npm-run-all": "4.1.5",
		"workspaces-run": "1.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.0",
		"@commitlint/config-conventional": "19.8.0",
		"@commitlint/cz-commitlint": "19.8.0",
		"@jsdevtools/version-bump-prompt": "6.1.0",
		"@types/bun": "1.2.5",
		"@typescript-eslint/eslint-plugin": "8.27.0",
		"@typescript-eslint/parser": "8.27.0",
		"commitizen": "4.3.1",
		"conventional-changelog-cli": "5.0.0",
		"dotenv": "16.4.7",
		"dotenv-cli": "8.0.0",
		"eslint": "8",
		"eslint-config-prettier": "10.1.1",
		"eslint-plugin-graphql": "4.0.0",
		"eslint-plugin-prettier": "5.2.3",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-typescript-sort-keys": "3.3.0",
		"eslint-plugin-unicorn": "49",
		"git-format-staged": "3.1.1",
		"husky": "9.1.7",
		"inquirer": "12",
		"is-ci": "4.1.0",
		"lint-staged": "15.5.0",
		"prettier": "3.5.3",
		"prettier-package-json": "2.8.0",
		"prettier-plugin-sh": "0.15.0",
		"pretty-quick": "4.1.1",
		"rimraf": "6.0.1",
		"turbo": "2.4.4"
	},
	"engines": {
		"node": ">=20.x",
		"pnpm": ">=10.x",
		"bun": ">=1.2.2"
	},
	"lint-staged": {
		"*.json": [
			"prettier --write"
		],
		"package.json": [
			"prettier-package-json --write --use-tabs false"
		],
		"*": [
			"bun run prettier --ignore-unknown"
		]
	},
	"packageManager": "bun@1.2.5"
}
