{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"types": [
			"node"
		],
		"declaration": true,
		"emitDeclarationOnly": true,
		"typeRoots": [
			"../../node_modules/@types",
			"../metadata/node_modules/@types"
		],
		"composite": true
	},
	"display": "@mofunetive/api",
	"extends": "../tsconfig.base.json",
	"include": [
		"src/**/*.ts"
	],
	"references": [
		{
			"path": "../metadata"
		}
	]
}
